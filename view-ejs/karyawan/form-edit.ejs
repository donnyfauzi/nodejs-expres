<h1>Form Edit Karyawan Karyawan</h1>
<hr><hr>

<% if (info_error) { %>
    <strong style="color: red;">
        <%= info_error.errno %> - <%= info_error.code %> <br>
        <%= info_error.sqlMessage %> <br>
    </strong>
    <br>
<% } %>


<form action="/karyawan/proses-update/<%= detail_karyawan[0].id %>" method="post">
    <label>Nama Lengkap</label>
    <input type="text" name="nama_lengkap" id="namakaryawan" value="<%= detail_karyawan[0].nama %>">
    <br><br>

    <label>Alamat</label>
    <textarea name="alamat" id="alamatkaryawan"><%= detail_karyawan[0].alamat %></textarea>
    <br><br>

    <label>Nomor Telepon</label>
    <input type="text" name="no_telp" id="notelpkaryawan" value="<%= detail_karyawan[0].no_telepon %>">
    <br><br>

    <label>Golongan Darah</label>
    <select name="gol_darah" id="goldarahkaryawan">
        <option value="">--pilih--</option>
        <option <%= (detail_karyawan[0].golongan_darah == "A")   ? "selected" : "" %> >A</option>
        <option <%= (detail_karyawan[0].golongan_darah == "B")   ? "selected" : "" %> >B</option>
        <option <%= (detail_karyawan[0].golongan_darah == "AB")  ? "selected" : "" %> >AB</option>
        <option <%= (detail_karyawan[0].golongan_darah == "O")   ? "selected" : "" %> >O</option>
    </select>
    <br><br>

    <label>Jenis Kelamin</label>
    <select name="jns_kelamin" id="jnskelaminkaryawan">
        <option value="">--pilih--</option>
        <option <%= (detail_karyawan[0].jenis_kelamin == "L") ? "selected" : "" %> value="L">Laki</option>
        <option <%= (detail_karyawan[0].jenis_kelamin == "P") ? "selected" : "" %> value="P">Perempuan</option>
    </select>
    <br><br>

    <button type="submit">perbarui</button>
</form>